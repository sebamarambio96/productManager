<h1>{{encabezado}}</h1>

<h2 class="py-3">Ingresa tus datos para ingresar:</h2>
<main class="form-signin w-50 h-50">
    <form id="login">
        <div class="form-floating">
            <input type="text" class="form-control" id="loginUser" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="loginPass" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <a href="/passRecovery">¿Has olvidado tu contraseña?</a>
        <button class="w-100 btn btn-lg btn-primary my-4" type="submit">ingresar</button>
        <a href="/profile/github"><img src="../static/img/github.png"></a>
    </form>
</main>

<h2 class="py-3">Registrate:</h2>
<main class="form-signin w-50 h-50">
    <form id="register">
        <div class="form-floating">
            <input type="email" class="form-control" id="registerUser" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="registerPass" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="registerFirts" placeholder="Seba">
            <label for="floatingPassword">Nombre</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="registerLast" placeholder="Marambio">
            <label for="floatingPassword">Apellido</label>
        </div>
        <div class="form-floating">
            <input type="number" class="form-control" id="registerAge" placeholder="27">
            <label for="floatingPassword">Edad</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary my-4" type="submit">Enviar</button>
    </form>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="static/js/profile.js"></script>